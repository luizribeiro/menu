{% extends 'base.html.jinja' %}

{% block content %}
  <h1>{{name}}</h1>

  <h2>Ingredients</h2>
  <ul>
    {% for ingredient in ingredients %}
      <li>{{ingredient.name}}</li>
    {% endfor %}
  </ul>

  <h2>Steps</h2>
  <ol>
    {% for step in steps %}
      <li>{{step}}</li>
    {% endfor %}
  </ol>
{% endblock %}
